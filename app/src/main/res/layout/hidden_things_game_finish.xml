<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FF9999"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Ойын аяқталды!"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/point_hidden_things"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@drawable/profile_text_style"
            android:gravity="center"
            android:text="Ұпай саны: 8 / 8 "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/motivation_hidden_things"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:background="@drawable/profile_text_style"
            android:gravity="center"
            android:text="Жарайсың , балақай! \n Осы қалпыңнан тайма!"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exit_game_hidden_things"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_style_info"
                android:fontFamily="@font/nunito_sans_bold"
                android:layout_margin="5dp"
                android:text="Шығу"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/new_game_hidden_things"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_end_collate_game"
                android:fontFamily="@font/nunito_sans_bold"
                android:layout_margin="5dp"
                android:text="Жаңа ойын"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>