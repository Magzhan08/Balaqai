<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.CollateGameActivity"
    android:background="@drawable/game_back2">

    <include
        layout="@layout/images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/collateText"
        android:layout_alignBottom="@id/btnSubmit"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="70dp" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/collateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/collate_IMAGES"
        android:textColor="@color/black"
        android:textSize="28sp" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_end_collate_game"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/end"
        android:textColor="@color/white"
        android:textSize="24sp" />
</RelativeLayout>