<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung_game_page"
    tools:context=".game.AliAndAyyaResultActivity">

    <TextView
        android:id="@+id/succesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Жарайсың, сен ойынды бітірдің!"
        android:textColor="@color/fioletovi"
        android:fontFamily="@font/nunito_sans_bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/succesTextView"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Answer : 0"
            android:fontFamily="@font/nunito_sans_bold"
            android:textColor="@color/fioletovi"/>

        <TextView
            android:id="@+id/incorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Wrong Answer : 0"
            android:fontFamily="@font/nunito_sans_bold"
            android:textColor="@color/fioletovi"/>

    </LinearLayout>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/theEndGame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Бітіру"
        android:textColor="@color/white"
        android:background="@drawable/round_back_game_next"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>
</RelativeLayout>