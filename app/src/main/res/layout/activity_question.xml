<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_tradition"
    tools:context=".traditions.QuestionActivity">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:src="@drawable/custom_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-10dp"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/linear_layout_style"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/maglumat_btn"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:text="@string/info"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/beine_btn"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:text="@string/video"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/ques_ans_btn"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_style_questio_answer"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:text="@string/question"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/linear_layout_style_question"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="question..."
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_layout">

        <LinearLayout
            android:id="@+id/option1"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/linear_layout_ques_ans_style"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/question_answers"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Option1"
                android:textColor="#461D8D"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option2"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/linear_layout_ques_ans_style"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/question_answers"
                android:gravity="center"
                android:text="Ә"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Option2"
                android:textColor="#461D8D"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option3"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/linear_layout_ques_ans_style"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/question_answers"
                android:gravity="center"
                android:text="Б"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option3_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Option3"
                android:textColor="#461D8D"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_end"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:background="@drawable/button_style_start"
        android:text="@string/end"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.562" />
</androidx.constraintlayout.widget.ConstraintLayout>