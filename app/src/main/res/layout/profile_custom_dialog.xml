<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#C7E4FF"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="10dp">


    <ImageView
        android:id="@+id/btn_profile_close"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/profile"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userNameProfile"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/profile_text_style"
            android:gravity="center"
            android:text="Аты:  Ардақ"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userAgeProfile"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/profile_text_style"
            android:gravity="center"
            android:text="Жасы:  7 "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userNumberProfile"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/profile_text_style"
            android:gravity="center"
            android:text="Нөмірі: 8 705 456 45 44"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>